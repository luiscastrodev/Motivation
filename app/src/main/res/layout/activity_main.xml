<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.MainActivity">

    <LinearLayout
        android:id="@+id/linearMenu"
        android:orientation="horizontal"
        android:padding="5dp"
        android:background="@color/purple_500"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imageAll"
            android:src="@drawable/ic_inclusive"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="45dp"
            app:tint="@color/white" />

        <ImageView
            android:id="@+id/imageHappy"
            android:src="@drawable/ic_happy"
            android:layout_width="0dp"
            app:tint="@color/white"
            android:layout_weight="1"
            android:layout_height="45dp"/>

        <ImageView
            android:id="@+id/imageMorning"
            android:src="@drawable/ic_sunny"
            android:layout_width="0dp"
            app:tint="@color/white"
            android:layout_weight="1"
            android:layout_height="45dp"/>



    </LinearLayout>

    <TextView
        android:id="@+id/textName"
        android:textSize="25sp"
        android:layout_below="@+id/linearMenu"
        android:layout_width="wrap_content"
        android:layout_marginTop="35dp"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content"
        android:textColor="#000"
        android:text="Hello World!"
        />

    <TextView
        android:id="@+id/textPhrase"
        android:textSize="25sp"
        android:layout_width="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginTop="35dp"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content"
        android:textColor="#000"
        android:text="Hello World!"
        />

    <View
        android:layout_width="128dp"
        android:background="@color/purple_200"
        android:layout_below="@+id/textPhrase"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"
        android:layout_height="3dp"/>

    <Button
        android:id="@+id/buttonNewPhrase"
        android:layout_alignParentBottom="true"
        android:text="Nova Frase"
        android:layout_margin="10sp"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:ignore="HardcodedText" />

</RelativeLayout>